<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clickable"
    android:padding="@dimen/activity_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hello"
            android:textColor="@color/fake_black"
            android:textSize="@dimen/big_text_size" />

        <RatingBar
            android:id="@+id/rbRestaurantStars"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_fields"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRestaurantCuisines"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rua dos sapatos"
            android:textColor="@color/fake_black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/tvRestaurantPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fields"
            android:text="0.00â‚¬"
            android:textColor="@color/nutrium_green"
            android:textSize="@dimen/regular_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_fields"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRestaurantAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rua dos sapatos"
            android:textColor="@color/fake_black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/tvRestaurantDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fields"
            android:text="10km"
            android:textColor="@color/fake_black"
            android:textSize="@dimen/regular_text_size" />

    </LinearLayout>
</LinearLayout>